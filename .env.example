# 必須環境変数
DIFY_API_BASE_URL=https://your-dify-instance.com
DIFY_EMAIL=your-dify-email@example.com
DIFY_PASSWORD=your-dify-password
EXTERNAL_API_URL=https://external-api.example.com
EXTERNAL_API_TOKEN=your-external-api-token

# API_Meter設定（新仕様対応 - SPEC-CHANGE-001）
API_METER_TENANT_ID=00000000-0000-0000-0000-000000000000
API_METER_TOKEN=your_bearer_token_here
API_METER_URL=https://api-meter.example.com

# オプション環境変数
CRON_SCHEDULE=0 0 * * *
LOG_LEVEL=info
GRACEFUL_SHUTDOWN_TIMEOUT=30
MAX_RETRY=3
NODE_ENV=production

# Dify Fetcher関連（オプション）
DIFY_FETCH_PAGE_SIZE=100
DIFY_FETCH_DAYS=30
DIFY_FETCH_TIMEOUT_MS=30000
DIFY_FETCH_RETRY_COUNT=3
DIFY_FETCH_RETRY_DELAY_MS=1000
WATERMARK_FILE_PATH=data/watermark.json
WATERMARK_ENABLED=false  # true: 差分取得、false: 常に過去N日分を取得（デフォルト）
